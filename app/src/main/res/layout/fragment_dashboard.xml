<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingHorizontal="15dp"
        android:text="@string/sales_activity"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ListView
        android:id="@+id/list_view"
        style="@style/Widget.AppCompat.ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="-3dp"
        tools:listitem="1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:text="@string/inventory_summary"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_view" />

    <LinearLayout
        android:id="@+id/inv_1"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="8dp"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:layout_width="0dp"
            android:paddingVertical="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="In Hand"
            android:background="@drawable/bg_1"
            android:textColor="@color/black"
            android:paddingHorizontal="8dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/textView2"/>
        <TextView
            android:id="@+id/in_hand"
            android:layout_width="0dp"
            android:paddingVertical="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="500"
            android:background="@drawable/bg_2"
            android:textColor="@color/black"
            android:paddingHorizontal="15dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/textView2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@+id/inv_1"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:layout_width="0dp"
            android:paddingVertical="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="To be received"
            android:textColor="@color/black"
            android:background="@drawable/bg_1"
            android:paddingHorizontal="8dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/textView2"/>
        <TextView
            android:id="@+id/to_be_received"
            android:layout_width="0dp"
            android:paddingVertical="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="500"
            android:textColor="@color/black"
            android:background="@drawable/bg_2"
            android:paddingHorizontal="15dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/textView2"/>
    </LinearLayout>
