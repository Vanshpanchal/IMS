<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="8dp" android:topRightRadius="8dp"/>
            <solid android:color="#2AACACAC"/>
        </shape>
    </item>

    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent color to ensure only stroke is visible -->
            <stroke android:width="1dp" android:color="#FF0000"/> <!-- Change color and width as needed -->
        </shape>
    </item>
</layer-list>